//- overview.html deki kodları pug template'e çevirdik.
doctype html
html 
  head 
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css') 
      link(rel='shortcut icon' type='image/png' href='img/favicon.png') 
      link(rel="stylesheet" href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title Natours | #{title}
      //- script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js" defer)
      //- script(src="/js/login.js" defer)
      script(src='/js/bundled/index.js' defer)
      script(defer, src="https://js.stripe.com/v3/")

  body
    // HEADER
    include _header

    // CONTENT
    block content 
      h1 This is a placeholder heading

    // FOOTER
    include _footer











